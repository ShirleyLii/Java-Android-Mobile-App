<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.shirley.cis436project2.HealerFragment">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="584dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/StrengthView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Strength" />

            <RatingBar
                android:id="@+id/Strength_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/intellectView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intellect" />

            <RatingBar
                android:id="@+id/intellect_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/wisdomView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wisdom" />

            <RatingBar
                android:id="@+id/wisdom_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/dexterity_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dexterity" />

            <RatingBar
                android:id="@+id/dexterity_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pointsAlertView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Points left to spend:" />

        <TextView
            android:id="@+id/pointsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>